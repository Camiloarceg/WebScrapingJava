{
	"info": {
		"_postman_id": "402918dc-a62e-4e9b-8300-7221aee674b0",
		"name": "Colección Libros Scraping",
		"description": "Colección de ejemplo que usa scraping.json para GET y POST de libros.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "21992871"
	},
	"item": [
		{
			"name": "GET Detalle del Libro",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}{{url}}",
					"host": [
						"{{baseUrl}}{{url}}"
					]
				}
			},
			"response": []
		},
		{
			"name": "POST Registrar Libro",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"titulo\": \"{{titulo}}\",\n    \"precio\": \"{{precio}}\",\n    \"link\": \"{{url}}\"\n}"
				},
				"url": {
					"raw": "https://jsonplaceholder.typicode.com/posts",
					"protocol": "https",
					"host": [
						"jsonplaceholder",
						"typicode",
						"com"
					],
					"path": [
						"posts"
					]
				}
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "test",
			"script": {
				"exec": [
					"pm.test(\"Código de estado es 200 o 201\", function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
					"});"
				],
				"type": "text/javascript"
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://books.toscrape.com/",
			"type": "default"
		}
	]
}